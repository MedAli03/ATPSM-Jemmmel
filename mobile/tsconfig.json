{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["app/*"],
      "@components/*": ["components/*"],
      "@features/*": ["features/*"],
      "@hooks/*": ["hooks/*"],
      "@lib/*": ["lib/*"],
      "@types": ["types"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src", "App.tsx"],
  "exclude": ["node_modules", "babel.config.js", "jest.config.js"]
}
